<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
    <id>au.com.glassechidna.luanalysis</id>
    <name>Luanalysis</name>
    <category>Custom Languages</category>
    <description><![CDATA[
    An IDE for statically typed Lua development.<br>
    <p><a href="https://github.com/Benjamin-Dobell/IntelliJ-Luanalysis">Source Code</a></p>
    ]]></description>
    <xi:include href="luanalysis-core.xml" xpointer="xpointer(/idea-plugin/*)"/>
    <depends optional="true" config-file="luanalysis-project.xml">com.intellij.java</depends>
    <actions>
        <group id="lua.ProjectViewPopupMenu">
            <separator/>
            <add-to-group group-id="ProjectViewPopupMenu"/>
            <action class="com.tang.intellij.lua.actions.MarkLuaSourceRootAction"
                    text="Mark as Lua Source Root"
                    id="lua.project.markSourceRoot"/>

            <action class="com.tang.intellij.lua.actions.UnmarkLuaSourceRootAction"
                    text="Unmark as Lua Source Root"
                    id="lua.project.unmarkSourceRoot"/>
            <reference ref="lua.LuaCheck"/>
        </group>
    </actions>
</idea-plugin>
